<div class="container">
  <div class="col-md-12">
   <h1>Active Games</h1>

   <div class="well">
    <div id="myCarousel" class="carousel slide">

      <!-- Carousel items -->
      <div class="carousel-inner">
        <div class="item active">
          <div class="row">

            <% @first_game_set.each do |game| %>
              <div class="col-sm-4">

                <% if game.rounds.last.content_type == "drawing" %>
                  <div class="svg-container">
                    <a href="/games/<%= game.id %>/rounds/new"><%= game.rounds.last.prepared_content %></a>
                  </div>
                <% else %>
                  <div class="description-container">
                    <a href="/games/<%= game.id %>/rounds/new">
                      <div class="description-container-table">
                        <div class="description-container-table-cell">
                          <%= game.rounds.last.prepared_content %>
                        </div>
                      </div>
                    </a>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div><!--/row-->
        </div><!--/item-->

        <% @remaining_game_sets.each do |set| %>
          <div class="item">
            <div class="row">
              <% set.each do |game| %>
                <div class="col-sm-4">


                <% if game.rounds.last.content_type == "drawing" %>
                  <div class="svg-container">
                    <a href="/games/<%= game.id %>/rounds/new"><%= game.rounds.last.prepared_content %></a>
                  </div>
                <% else %>
                  <div class="description-container">
                    <a href="/games/<%= game.id %>/rounds/new">
                      <div class="description-container-table">
                        <div class="description-container-table-cell">
                          <%= game.rounds.last.prepared_content %>
                        </div>
                      </div>
                    </a>
                  </div>
                <% end %>


                </div>
              <% end %>
            </div>
          </div>
        <% end %>


      </div>
      <!--/carousel-inner--> <a class="left carousel-control" href="#myCarousel" data-slide="prev">‹</a>

      <a class="right carousel-control" href="#myCarousel" data-slide="next">›</a>
    </div>
    <!--/myCarousel-->
  </div>
  <!--/well-->
</div>
</div>
